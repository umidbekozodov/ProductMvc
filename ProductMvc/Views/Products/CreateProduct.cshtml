@using ProductMvc.Dtoes;

@model CreateProductDto

<form method="post" class="mx-1 mx-md-4" enctype="multipart/form-data">

    <div class="mb-3">
        <label for="Title" class="form-label">Title</label>
        <input type="text" asp-for="Title" class="form-control">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="mb-3">
        <label for="Quantly" class="form-label">Quantly</label>
        <input type="number" asp-for="Quantly" class="form-control">
        <span class="text-danger" asp-validation-for="Quantly"></span>
    </div>

    <div class="mb-3">
        <label for="Price" class="form-label">Price</label>
        <input type="number" step="0.01" asp-for="Price" class="form-control">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    

    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-primary btn-lg">Create</button>
    </div>

</form>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
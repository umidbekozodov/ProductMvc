@model List<GetProductsVM>?

@if (Model != null && Model.Count() > 0)
{
    <table class="table" >
        <thead>

            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Quantly</th>
                <th scope="col">Price</th>
                <th scope="col">TotalPriceWithVat</th>
            </tr>

        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <th scope="row">@(i+1)</th>
                    @if (!User.IsInRole("admin"))
                    {
                        <th scope="row">@Model[i].Title</th>
                    }
                    else
                    {
                        <td> <a asp-controller="Products" asp-action="GetProduct" asp-route-productId="@Model[i].Id" class="btn btn-info"> @Model[i].Title </a></td>

                    }
                    <th scope="row">@Model[i].Quantly</th>
                    <th scope="row">@Model[i].Price</th>
                    <th scope="row">@Model[i].TotalPriceWithVat</th>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div style="text-align:center;">
        <h1>no products</h1>
    </div>
    <br />
    <br />
}
